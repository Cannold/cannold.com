<%#
  @phrase -> the text of the tag
  @results -> an array of objects that have this tag
%>
<h1>Projects tagged with '<%= @phrase %>':</h1>

<% @results.each do |project| %>
    
  <div class="post">
    <h2>
      <%= link_to_project(project.title, project) %>&nbsp;&mdash;&nbsp;
      <%= project.client %>
    </h2>
    <%= project.description_markup %>
  </div> 
<% end %>

<p class="back">
  <%= link_to_page("&#x2190; Back to #{@page.title} index", @page) %>
</p