<div id="left">

     <%= @page.content_markup %>

  
<% if @upcoming_events.any? %>

  <% @upcoming_events.reverse.each do |event| %>

  <div class="body bodyevents indexsummary">   

<%= link_to_event("<h2>#{ event.date_summary( lambda {|d| d.strftime("%d %b %Y") } ) }: #{event.title}</h2>", event, :template => 'events' ) %>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<div class="addthis_sharing_toolbox"></div>

  <%= tag(:p) %>

     <%= event.content.truncate_html(100) %> 

    <% content_tag :span, :class => "moreinline" do -%>

    <%= link_to_event("more", event, :template => 'events' ) %> <img src="/static/images/arrow.gif" width="13" height="9" alt=" ">

     <% end -%>

</div> 

  <% end %>

<% end %>
  
<% if @current_events.any? %>

  <% @current_events.reverse.each do |event| %>
  


<div class="body bodyevents indexsummary">

     <h2><%= event.date_summary( lambda {|d| d.strftime("%d %b %Y") } ) %>: <%= event.title %></h2>

<!-- Go to www.addthis.com/dashboard to customize your tools -->
<div class="addthis_sharing_toolbox"></div>
 

  <%= tag(:p) %>

     <%= event.content.truncate_html(100) %> 
  
  
    <% content_tag :span, :class => "moreinline" do -%>


    <%= link_to_event("more", event, :template => 'events') %> <img src="/static/images/arrow.gif" width="13" height="9" alt=" ">

     <% end -%>

        </div>  

  <% end %>

<% end %>

  <p class="back">

  <a href="/events/archive/">See past events</a>

  </p>

  </div>



