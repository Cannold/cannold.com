<h1><%= @page.title %></h1>

<%= @page.content_markup %>

<% form_tag @page.url(:action => :submit), :class => "uniForm" do %>
<fieldset class="inlineLabels">

  <div class="ctrlHolder">
    <label for="from_name">Your name:</label>
    <%= text_field_tag 'from_name', nil, :size => 30 %> 
  </div>

  <div class="ctrlHolder">
    <label for="content">Your email address</label>
    <%= text_field_tag 'from_email', nil, :size => 30 %>
  </div>
  
  <% if @recipients.any? %>
    <div class="ctrlHolder">
      <label for="recipient">Recipient</label>
      <%= select_recipient(@recipients) %>
    </div>
  <% end %>

  <div class="ctrlHolder">
    <label for="message">Your message: </label>
    <%= text_area_tag 'message', nil, {:rows => "12"} %>
  
    <p class="formHint">

    </p>
  </div>
</fieldset>

<div class="buttonHolder">
  <%= submit_tag("Send message") %>
</div>

<% end %>

